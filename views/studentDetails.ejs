<%- include('partials/studentProfileHeader.ejs') %>

<div class="details-container">
  <h1>Details</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Roll Number</th>
      <th>Email</th>
      <th>Semester</th>
      <th>Subjects</th>
    </tr>
    <tr>
      <td><%= name %></td>
      <td><%= roll_number %></td>
      <td><%= email %></td>
      <td><%= semester %></td>
      <td>
        <ul>
          <%subjects.forEach(subject=>{ %>
          <li><%= subject %></li>
          <% }) %>
        </ul>
      </td>
    </tr>
  </table>
</div>
<%- include('partials/studentProfileFooter.ejs') %>
